<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>BranchListServlet</servlet-name>
        <servlet-class>com.sales.controller.BranchListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BranchListServlet</servlet-name>
        <url-pattern>/BranchListServlet.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BranchServlet</servlet-name>
        <url-pattern>/BranchServlet.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/CustomerServlet.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetails</servlet-name>
        <url-pattern>/ProductDetails.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductRegister</servlet-name>
        <url-pattern>/ProductRegister.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductRequest</servlet-name>
        <url-pattern>/ProductRequest.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RptProductServlet</servlet-name>
        <url-pattern>/RptProductServlet.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sales</servlet-name>
        <url-pattern>/Sales.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SalesReport</servlet-name>
        <url-pattern>/SalesReport.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoresReport</servlet-name>
        <url-pattern>/StoresReport.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransportServlet</servlet-name>
        <url-pattern>/TransportServlet.sales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet.sales</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
